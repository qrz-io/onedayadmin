<?xml version="1.0"?>
<config>
    <tabs>
        <qrz>
            <label>QRZ</label>
            <sort_order>200</sort_order>
        </qrz>
    </tabs>
    <sections>
        <qrz_onedayadmin translate="label" module="qrz_onedayadmin">
            <label>One Day Admin</label>
            <tab>qrz</tab>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <frequency>
                            <label>How often do you want the cron to run?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>qrz_onedayadmin/system_config_source_frequency</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                        </frequency>
                        <one_day_admin_roles translate="label">
                            <label>One Day Admin Roles</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>qrz_onedayadmin/system_config_source_oneDayAdminRoles</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </one_day_admin_roles>
                    </fields>
                </general>
            </groups>
        </qrz_onedayadmin>
    </sections>
</config>


